<div class="container">
  <header>
    {{#if session.isAuthenticated}}
      {{#link-to 'repos-favorites'}}
        <img src={{session.secure.avatar_url}} class="avatar" />
      {{/link-to}}
      <span class="username">{{session.secure.username}}</span>
      <a href="" {{ action 'invalidateSession' }}>logout</a>
    {{else}}
      <div class="title">Github Issues</div>
    {{/if}}
  </header>

  {{#each flashMessages.queue as |flash|}}
    {{flash-message flash=flash}}
  {{/each}}

  {{outlet}}
</div>